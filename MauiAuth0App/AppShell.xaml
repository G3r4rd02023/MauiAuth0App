<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAuth0App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAuth0App"
    xmlns:pages ="clr-namespace:MauiAuth0App.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="MauiAuth0App">

    
    <Shell.FlyoutHeader>
        <Image Source="logoambe.jpg" WidthRequest="120" Margin="10" BackgroundColor="MediumPurple"></Image>
    </Shell.FlyoutHeader>
   

    <ShellContent
        Icon="home.svg"
        Title="Inicio"        
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Icon="clipboard.svg"
        Title="Usuarios"
        ContentTemplate="{DataTemplate pages:UsuariosPage}"
        Route="UsuariosPage" />

    <ShellContent
         Icon="ticket.svg"
         Title="Bitacora"
         ContentTemplate="{DataTemplate pages:BitacoraPage}"
         Route="BitacoraPage" />

    <ShellContent
         Icon="ticket.svg"
         Title="Roles"
         ContentTemplate="{DataTemplate pages:RolesPage}"
         Route="RolesPage" />

    <MenuItem IconImageSource="stand_by.svg" Text="Cerrar SesiÃ³n" Clicked="CerrarSesion_Clicked">
    </MenuItem>


</Shell>
